<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:layout_margin="1dp"
    android:id="@+id/parent_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="3dp"
        app:cardBackgroundColor="@color/colorBottomNav">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/book_image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction to machine learning"
                android:layout_alignBaseline="@id/book_image"
                android:layout_toRightOf="@id/book_image"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:layout_marginLeft="8dp"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andrew Ng"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/book_image"
                android:layout_below="@id/book_name"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/edition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2nd edition"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/book_image"
                android:layout_below="@id/author_name"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 Taka"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/book_image"
                android:layout_below="@id/edition"
                android:textSize="14dp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>